						   <option value="" <%="".equalsIgnoreCase(fldAmount)?"selected":""%>> </option>
						   <option value="OTHER" <%=!"".equalsIgnoreCase(fldAmount)?"selected":""%>>OTHER</option>
						   <option value="30.00" <%="30.00".equalsIgnoreCase(fldAmount)?"selected":""%>>30.00</option>
