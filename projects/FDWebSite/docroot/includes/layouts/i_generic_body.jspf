StringBuffer tblCells = new StringBuffer(600);
boolean isDepartment = currentFolder.getContentType().equals(ContentNodeI.TYPE_DEPARTMENT);
String trkCode = "";

if (isDepartment) {
    maxCols=5;
    maxWidth = 550;
    tdwidth=110;
