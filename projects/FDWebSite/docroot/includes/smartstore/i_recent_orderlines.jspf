<%
// Display recent order lines
// Used primarily in view_cart.jsp
// It's made up with SmartStore design
//
// @author segabor
//
// @param cart customer's cart, instance of FDCartModel
// @param currencyFormatter = java.text.NumberFormat.getCurrencyInstance(Locale.US);
//
%><%@ page import="java.util.Iterator"
%><%@ page import="java.util.Locale"
%><%@ page import="com.freshdirect.fdstore.customer.FDCartLineModel"
%><div style="text-align: left; width: 693px; border: 1px solid #996699; position: relative; background-image: url('/media_stat/images/layout/dyf_purple_span.gif'); background-position: left; background-repeat: repeat-y;">
	<!-- corners -->
	<img src="/media_stat/images/layout/dyf_conf_tl.gif" style="width: 36px; height: 32px; position: absolute; top: -1px; left: -1px"/>
	<img src="/media_stat/images/layout/dyf_conf_tr.gif" style="width: 6px; height: 6px; position: absolute; top: -1px; right: -1px"/>
	<img src="/media_stat/images/layout/dyf_conf_bl.gif" style="width: 36px; height: 6px; position: absolute; bottom: -1px; left: -1px"/>
	<img src="/media_stat/images/layout/dyf_conf_br.gif" style="width: 6px; height: 6px; position: absolute; bottom: -1px; right: -1px"/>
	<img src="/media_stat/images/layout/dyf_conf_hdr.gif" style="width: 235px; height: 10px; padding: 8px 0 7px 44px;"/>
	<table cellspacing="0" cellpadding="0" style="border: 0; width: 500px; margin: 0px 0px 6px 64px;">
<%
		for (Iterator oit = cart.getRecentOrderLines().iterator();oit.hasNext();) {
			FDCartLineModel orderLine = (FDCartLineModel)oit.next();
%>
		<tr>
			<td><%= (long) orderLine.getQuantity() %></td>
			<td><%= orderLine.getDescription() %></td>
			<td><%= currencyFormatter.format(orderLine.getPrice()) %></td>
		</tr>
<%
		}
%>
	</table>
</div>
