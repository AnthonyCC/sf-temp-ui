<%!
	public String printDate(Date date){
		java.text.SimpleDateFormat modDayDateFormat = new java.text.SimpleDateFormat("h:mm a 'on' EEEE, MM/d/yy");
		java.text.SimpleDateFormat modDayMayDateFormat = new java.text.SimpleDateFormat("h:mm a 'on' EEEE, MM/d/yy");
		Calendar c = Calendar.getInstance();
		c.setTime(date);
	
		if(c.get(Calendar.MONTH) >= Calendar.MAY && c.get(Calendar.MONTH) <= Calendar.JULY){
			return modDayMayDateFormat.format(date);
		}else{
			return modDayDateFormat.format(date);
		}
	} 
	
		public String printDateOnly(Date date){
		java.text.SimpleDateFormat modDayDateFormat = new java.text.SimpleDateFormat("EEEE, MM/d");
		java.text.SimpleDateFormat modDayMayDateFormat = new java.text.SimpleDateFormat("EEEE, MM/d");
		Calendar c = Calendar.getInstance();
		c.setTime(date);
	
		if(c.get(Calendar.MONTH) >= Calendar.MAY && c.get(Calendar.MONTH) <= Calendar.JULY){
			return modDayMayDateFormat.format(date);
		}else{
			return modDayDateFormat.format(date);
		}
	}
%>
 
