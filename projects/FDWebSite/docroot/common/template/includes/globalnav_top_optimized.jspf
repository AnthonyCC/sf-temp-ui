				dlvInfoLink = "/your_account/delivery_info_avail_slots";
			} else {
				dlvInfoLink = "/help/delivery_info";
					if (EnumServiceType.CORPORATE.equals(user.getSelectedServiceType())) {
						dlvInfoLink += "_cos";
					} 
			}
		%>
