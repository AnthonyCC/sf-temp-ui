		<td align="center" colspan="2"><img src="/media_stat/images/layout/clear.gif" width="1" height="12" border="0" /></td>
	</tr>
	<tr>
		<td align="right" colspan="2" style="padding-left:4px;" class="text13bold">TOTAL: <%= JspMethods.currencyFormatter.format( totalPrice ) %></td>
