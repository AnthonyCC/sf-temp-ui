									 if(isPreReservedSlotId && hasPreReserved && !defaultColExp){
										defaultColExp = true;
						%>			
										dayIndex = <%= dayIndex %>;
										slotIndex= <%= slotIndex %>;
						<%							
									}else if(isSelectedSlotId && !defaultColExp){
