										timeslotBuff.append("<div class=\"fleft tsReservationPropE\" id=\"ts_d"+dayIndex+"_ts"+slotIndex+"_msgE\" style=\"display: none;\">")
											.append("<font class=\"tsReservationE\">RESERVED</font>")
											.append("</div>");
