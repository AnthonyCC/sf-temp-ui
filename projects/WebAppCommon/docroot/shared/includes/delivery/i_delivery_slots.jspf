					<%}else{%>
						refAdvData[<%=dayIndex%>][0][<%=slotIndex%>]='';
						refAdvData[<%=dayIndex%>][1][<%=slotIndex%>]='';
					<%}%>
			<%}
				dayIndex++;
			}%>
			<%
