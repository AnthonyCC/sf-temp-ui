						<%			}
								timeslotBuff.append("</td>");
						%>
				<%}else{
					cutoffBuff.append("<td class=\"cutoff\" colspan=\"3\">")
						.append("<a href=\"#\" id=\"co_d"+dayIndex+"_ts"+slotIndex+"\" onclick=\"return false;\"")
						.append(">&nbsp;</a>");
					cutoffBuff.append("</td>");
					//generate the days/timeslots going across
					timeslotBuff.append("<td class=\"tsCol tsContainerC\" colspan=\"3\" id=\"ts_d"+dayIndex+"_ts"+slotIndex+"\">");
					timeslotBuff.append("<a href=\"#\" onclick=\"tsContractAll(\'tsContainer\', \'ts_d"+dayIndex+"_ts"+slotIndex+"\'); tsExpand(\'ts_d"+dayIndex+"_ts"+slotIndex+"\');return false;\"")
						.append(" class=\"tsContent\"><div id=\"ts_d"+dayIndex+"_ts"+slotIndex+"_rbCont\" class=\"fleft ts_rb\">&nbsp;</div><div>&nbsp;</div></a>");
					timeslotBuff.append("</td>");
