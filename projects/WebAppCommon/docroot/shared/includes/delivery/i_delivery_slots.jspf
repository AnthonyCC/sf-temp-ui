		</logic:iterate>
		<%
			int fDayIndex=0;
			if(isForAdvOrdSlots){
				fDayIndex = 10;
		        }else{
				fDayIndex = 0;
			}
			footerBuff.append("<tr>");
			for(Date day : days){
				footerBuff.append("<td class=\"tsFooter\" id=\"ts_d"+fDayIndex+"_ts_footer\" colspan=\"3\" valign=\"top\">")
