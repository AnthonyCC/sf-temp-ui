                          %><a href="javascript:popup('<%=path%>','<%=tm.getPopupSize()%>')"><b><%= priDomainValue.getLabel().toUpperCase()%></b></a><%
                          String domainLabel = priDomainValue.getLabel().toUpperCase();     
                          
                          
