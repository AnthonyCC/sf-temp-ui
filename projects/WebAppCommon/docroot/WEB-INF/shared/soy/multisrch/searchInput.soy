{namespace multisrch}
/**
 * @param? terms
 * @param? maxItems
 */
{template .searchInput autoescape="false"}
<div class="multisearch-input" data-component="multisearch-input">
  {if ($maxItems and length($terms) < $maxItems) or length($terms) < 10}
  <form>
    <label for="searchinput">Add product:</label>
    <div class="inputholder">
      <input id="searchinput" class="searchinput" type="text" placeholder="Search the store" data-component="autocomplete" autocomplete="off"/>
      <button class="searchbutton" type="submit">Add to search list</button>
    </div>
  </form>
  {/if}
  <ul>
    <li class="title">Current products</li>
  {foreach $term in $terms}
    <li data-searchterm="{$term}">{$term} <button class="remove">remove {$term}</button></li>
  {/foreach}
  </ul>
</div>
{/template}
