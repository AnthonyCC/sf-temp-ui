{namespace multisrch}
/**
 * @param? terms
 */
{template .searchResults autoescape="false"}
<div class="multisearch-results" data-component="multisearch-results">
  <ul data-component="multisearch-list">
  {if $terms}
    {foreach $term in $terms}
    <li data-searchresult="{$term}">Loading search results for {$term}...</li>
    {/foreach}
  {/if}
  </ul>
</div>
{/template}

/**
 * @param searchParams
 * @param products
 */
{template .searchResultCarousel}
{if ($searchParams.searchParams and $products and length($products) > 3)}
  <div class="content-module product-carousel single-module" id="search-results-{$searchParams.searchParams}">
    <div class="content-header" data-component="content-header">
      <div>
        <h2>{$searchParams.searchParams} {if $searchParams.searchTerm}<span class="term">({$searchParams.searchTerm})</span>{/if}</h2>
      </div>
      <div class="view-all">
        <a href="/srch.jsp?searchParams={$searchParams.searchParams}" class="viewall cssbutton small green arrowbutton">View all<span class="offscreen"> search results for '{$searchParams.searchParams}'</span></a>
      </div>
    </div>
  	<div class="content">
      <div class="carousel">
    		{call common.simpleCarousel}
    			{param items: $products /}
    			{param itemType:'grid' /}
  				{param extraClass:'noFeaturedHeaderBanner' /}
    		{/call}
      </div>
  	</div>
  </div>
{/if}
{/template}
