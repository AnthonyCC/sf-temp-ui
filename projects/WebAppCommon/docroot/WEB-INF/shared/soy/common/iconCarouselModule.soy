{namespace common}

/**
 * @param moduleData
 * @param data
 */
{template .iconCarouselModule}
<div class="content-module icon-carousel" id="{$moduleData.moduleInstanceId}">
	{call common.moduleHeader}
		{param content: $moduleData /}
	{/call}
	<div class="content">
		{call common.contentHeader}
			{param content: $moduleData /}
		{/call}
    {if $data.icons and length($data.icons) > 0}
  		{call common.simpleCarousel}
  			{param isIconCarousel: true /}
  			{param items: $data.icons /}
  			{param showViewAllButton: $moduleData.showViewAllButton /}
  			{param viewAllLink: $moduleData.viewAllButtonLink /}
  			{param accessibilityText}
  				{if $moduleData.contentTitle}
  					{$moduleData.contentTitle}
  				{else}
  					{$moduleData.moduleTitle}
  				{/if}
  			{/param}
  			{param itemType:'grid' /}
  		{/call}
    {/if}
	</div>
</div>
{/template}
