{namespace common}

/**
 * @param popupId id
 * @param customClass custom classname
 * @param hasClose show close button
 * @param helpTemplate help popup template
 * @param helpHeader help popup header
 * @param headerContent header text
 * @param bodyContent popup content
 */
{template .fixedPopup autoescape="false"}
    <div id="{$popupId}" class="fixedpopup {if not $helpTemplate}qs-hidehelp{/if} {if $hasClose}qs-hasclose{/if} {$customClass}">
    	<div class="fixedPopupHelper"></div>
    	<div class="fixedPopupContent">
	        <h2 class="qs-popup-header"><span>{$headerContent}</span> <button class="qs-popup-help-icon" data-bodytemplate="{$helpTemplate}" data-header="{$helpHeader}">help</button> <button class="qs-popup-close-icon">close</button></h2>
	        <div class="qs-popup-content">
	        	{$bodyContent}
	        </div>
        </div>
    </div>
{/template}
