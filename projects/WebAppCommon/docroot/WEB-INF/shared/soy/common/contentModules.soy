{namespace common}

/**
 * @param config
 * @param data
 */
{template .contentModules}
{if $config and $data}
  <div class="contentModules">
  	{foreach $module in $config}
  		{call common.contentModuleSelector}
  			{param moduleConfig: $module /}
  			{param data: $data[$module.moduleId] /}
  		{/call}
  	{/foreach}
  </div>
{/if}
{/template}

/**
 * @param moduleConfig
 * @param data
 */
{template .contentModuleSelector}
	{if $data.adHomePageBeacon and $data.adHomePageBeacon != ''}
		<img src="{$data.adHomePageBeacon}" style="display: none;" />
	{/if}
  {delcall common.moduleSelector variant="$moduleConfig.sourceType"}
    {param moduleData: $moduleConfig /}
    {param data: $data /}
  {/delcall}
{/template}
