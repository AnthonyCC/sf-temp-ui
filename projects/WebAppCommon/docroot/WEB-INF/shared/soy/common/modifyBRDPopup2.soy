{namespace common}

/**
 * @param cartData pending popup cart data
 * @param orderInfos pending popup order data
 * @param pendingItems pending popup items to add
 */
{template .modifyBRDPopup2}
<div id="MBRDPopup2" class="BRD-popup-container">
	<div class="BRD-popup qs-popup">
		<h2 class="qs-popup-header"><span>You are modifying a pending order.</span><button class="MBRD-close">close</button></h2>
		<div class="qs-popup-content">
			<p class="MBRD-order">
				<label for="MBRDOrder">Choose which order to modify:</label>
				<select id="MBRDOrder">
					{foreach $order in $orderInfos}
						<option value="{$order.erpSalesId}">{$order.erpSalesId} - {$order.deliveryStartTime} {$order.deliveryEndTime}</option>
					{/foreach}
				</select>
			</p>

			<h3>Add {if length($pendingItems) > 1}these items{else}this item{/if} to your pending order</h3>
			<div id="MBRDPendingdata" {if length($pendingItems) > 1}class="multi"{/if}>
				<ul class="col">
					{foreach $pendingItem in $pendingItems}
						{call quickshop.item}
							{param item:$pendingItem /}
							{param type:'simple'/}
						{/call}
						{if length($pendingItems) > 1 and index($pendingItem) == ceiling(length($pendingItems)/2)-1}
							</ul><ul class="col">
						{/if}
					{/foreach}
				</ul>
			</div>


			{if $cartData and length($cartData) > 0}
				<h3>You have other items in your cart - You can add them to your pending order.</h3>
				<p>Choose items you want to add to your order. Select them all, or individually.</p>
				<p class="MBRD-selectbuttons">
					<button class="MBRD-selectall">Select All</button>
					<button class="MBRD-deselectall">Deselect All</button>
				</p>

				<div id="MBRDCartdata">
					<div>
						<ul class="col">
							{foreach $cartItem in $cartData}
								{call quickshop.item}
									{param item:$cartItem /}
									{param type:'simpleToggle'/}
								{/call}
								{if index($cartItem) == ceiling(length($cartData)/3)-1 or index($cartItem) == ceiling(length($cartData)/3)*2-1}
									</ul><ul class="col">
								{/if}
							{/foreach}
						</ul>
					</div>
				</div>
			{/if}
			<p class="MBRD-buttons">
				<button class="MBRD-cancel">Cancel</button>
				<button class="MBRD-modify" data-ref="#MBRDPopup2">Modify Order</button>
			</p>
		</div>
	</div>
</div>
{/template}