{namespace pdp}

/**
 * @param productList
 * @param? mobWeb
 */
{template .likethat}
    {if $productList and length($productList) > 1}
	<div class="pdp-likethat" data-cmeventsource="LTYLT">
		<h2 {if $mobWeb}tabindex="0"{/if} class="{if $mobWeb}gen-accord-toggler{/if}">Like That? You'll Love This.</h2>
		<div class="first{if $mobWeb} gen-accord-content{/if}" {if $mobWeb}style="display: none;"{/if}> 
    	{call common.simpleCarousel}
    		{param items:$productList /}
    		{param itemType:'grid' /}
    		{param mobWeb:$mobWeb /}
    	{/call}
    	</div>
    </div>
    {/if}
{/template}