{namespace test.sub2}

/**
 * @param x some parameter
 */
{template .test}
<div>
	[test.sub2.test calling test.sub2.innerTest]<br/>
	{call .innerTest}
		{param path: $x /}
	{/call}	
</div>
{/template}


/**
 * @param path some path, list of items
 */
{template .innerTest private="true"}
<div style="font-style:italic;">
	[test.sub2.innerTest]<br/>
	{foreach $p in $path}
		{if not isFirst($p)}<span>&nbsp;&gt;&nbsp;</span>{/if}
		<span>{$p}</span>
	{/foreach}
</div> 	
{/template}
