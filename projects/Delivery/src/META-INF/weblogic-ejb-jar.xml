<?xml version="1.0"?>
<!DOCTYPE weblogic-ejb-jar PUBLIC '-//BEA Systems, Inc.//DTD WebLogic 6.0.0 EJB//EN' 'http://www.bea.com/servers/wls600/dtd/weblogic-ejb-jar.dtd'>

<!-- Created by knadeem on August 1, 2001, 8:54 PM -->

<weblogic-ejb-jar>

	<weblogic-enterprise-bean>
        <ejb-name>SessionAuditor</ejb-name>
        <stateless-session-descriptor>
	        <pool><max-beans-in-free-pool>50</max-beans-in-free-pool>
	        </pool></stateless-session-descriptor>
		<reference-descriptor>
            <resource-description>
                <res-ref-name>jdbc/dbpool</res-ref-name>
                <jndi-name>fddatasource</jndi-name>
            </resource-description>
        </reference-descriptor>
        <jndi-name>freshdirect.SessionAuditor</jndi-name>
    </weblogic-enterprise-bean>

	<weblogic-enterprise-bean>
        <ejb-name>DlvManager</ejb-name>
        <stateless-session-descriptor>
	        <pool><max-beans-in-free-pool>50</max-beans-in-free-pool>
	        </pool></stateless-session-descriptor>
        
	  <reference-descriptor>
        <resource-description>
                <res-ref-name>jdbc/dbpool</res-ref-name>
                <jndi-name>fddatasource</jndi-name>
        </resource-description>
        
        <resource-description>
                <res-ref-name>jms/QueueFactory</res-ref-name>
                <jndi-name>queueFactory</jndi-name>
        </resource-description>
        <resource-env-description>
                <res-env-ref-name>jms/Queue</res-env-ref-name>
                <jndi-name>./logMetricQueue</jndi-name>
        </resource-env-description>
        </reference-descriptor>
        <jndi-name>freshdirect.delivery.DeliveryManager</jndi-name>
    </weblogic-enterprise-bean>
	
	
	<weblogic-enterprise-bean>
        <ejb-name>DlvRestrictionManager</ejb-name>
        <stateless-session-descriptor>
	        <pool><max-beans-in-free-pool>50</max-beans-in-free-pool>
	        </pool></stateless-session-descriptor>
		<reference-descriptor>
            <resource-description>
                <res-ref-name>jdbc/dbpool</res-ref-name>
                <jndi-name>fddatasource</jndi-name>
            </resource-description>
        </reference-descriptor>
        <jndi-name>freshdirect.delivery.DeliveryRestrictionManager</jndi-name>
    </weblogic-enterprise-bean>
	
	<weblogic-enterprise-bean>
        <ejb-name>DlvAdminManager</ejb-name>
        <stateless-session-descriptor>
	        <pool><max-beans-in-free-pool>50</max-beans-in-free-pool>
	        
        </pool></stateless-session-descriptor>
       
		<reference-descriptor>
            <resource-description>
                <res-ref-name>jdbc/dbpool</res-ref-name>
                <jndi-name>fddatasource</jndi-name>
            </resource-description>
        </reference-descriptor>
        <jndi-name>freshdirect.delivery.AdminManager</jndi-name>
    </weblogic-enterprise-bean>
    
    <weblogic-enterprise-bean>
        <ejb-name>DlvMapper</ejb-name>
        <stateless-session-descriptor>
	        <pool><max-beans-in-free-pool>50</max-beans-in-free-pool>
	        
        </pool></stateless-session-descriptor>
        <reference-descriptor>
            <resource-description>
                <res-ref-name>jdbc/dbpool</res-ref-name>
                <jndi-name>fddatasource</jndi-name>
            </resource-description>
        </reference-descriptor>
        <jndi-name>freshdirect.delivery.Mapper</jndi-name>
    </weblogic-enterprise-bean>
    
	<weblogic-enterprise-bean>
        <ejb-name>DlvTemplateManager</ejb-name>
        <stateless-session-descriptor>
	        <pool><max-beans-in-free-pool>50</max-beans-in-free-pool>
	        
        </pool></stateless-session-descriptor>
        
		<reference-descriptor>
            <resource-description>
                <res-ref-name>jdbc/dbpool</res-ref-name>
                <jndi-name>fddatasource</jndi-name>
            </resource-description>
        </reference-descriptor>
        <jndi-name>freshdirect.delivery.TemplateManager</jndi-name>
    </weblogic-enterprise-bean>
    
    <weblogic-enterprise-bean>
        <ejb-name>DlvDepotManager</ejb-name>
        <stateless-session-descriptor>
	        <pool>
            <max-beans-in-free-pool>50</max-beans-in-free-pool>
	        </pool></stateless-session-descriptor>
        
		<reference-descriptor>
            <resource-description>
                <res-ref-name>jdbc/dbpool</res-ref-name>
                <jndi-name>fddatasource</jndi-name>
            </resource-description>
        </reference-descriptor>
        <jndi-name>freshdirect.delivery.DepotManager</jndi-name>
    </weblogic-enterprise-bean>
	
    <weblogic-enterprise-bean>
        <ejb-name>DlvDepot</ejb-name>
        <entity-descriptor>
	        <pool><max-beans-in-free-pool>50</max-beans-in-free-pool>
	        </pool></entity-descriptor>
        
        <reference-descriptor>
            <resource-description>
                <res-ref-name>jdbc/dbpool</res-ref-name>
                <jndi-name>fddatasource</jndi-name>
            </resource-description>
        </reference-descriptor>
        <jndi-name>freshdirect.delivery.Depot</jndi-name>
        
    </weblogic-enterprise-bean>
	<weblogic-enterprise-bean>
        <ejb-name>RoutingGateway</ejb-name>
        <stateless-session-descriptor>
            
                <pool>
                <max-beans-in-free-pool>50</max-beans-in-free-pool>
                </pool></stateless-session-descriptor>
        
        <reference-descriptor>
            <resource-description>
                <res-ref-name>jms/QueueFactory</res-ref-name>
                <jndi-name>queueFactory</jndi-name>
            </resource-description>
            <resource-env-description>
                <res-env-ref-name>jms/Queue</res-env-ref-name>
                <jndi-name>./routingQueue</jndi-name>
            </resource-env-description>
        </reference-descriptor>
        <jndi-name>freshdirect.routing.Gateway</jndi-name>
    </weblogic-enterprise-bean>
    
   
    <weblogic-enterprise-bean>
        <ejb-name>RoutingLoadListener</ejb-name>

        <message-driven-descriptor>
           
                <pool><max-beans-in-free-pool>50</max-beans-in-free-pool>
                </pool>
            <destination-jndi-name>routingQueue</destination-jndi-name>
        </message-driven-descriptor>

        <jndi-name>freshdirect.routing.RoutingLoadListener</jndi-name>
    </weblogic-enterprise-bean>
    <transaction-isolation>
        <isolation-level>TRANSACTION_READ_COMMITTED</isolation-level>
        <method>
            <ejb-name>RoutingGateway</ejb-name>
            <method-intf>Remote</method-intf>
            <method-name>*</method-name>
        </method>
        <method>
	            <ejb-name>DlvDepot</ejb-name>
	            <method-name>*</method-name>
	        </method>
    </transaction-isolation>
    
</weblogic-ejb-jar>
