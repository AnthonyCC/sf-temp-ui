<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.freshdirect.delivery.audit"
	schema="dlv">

	<class name="SessionAuditEntry" table="SESSION_LOG">
		<id name="id" column="ID">
			<generator class="sequence">
				<param name="sequence">SYSTEM_SEQ</param>
			</generator>
		</id>

		<property name="role" column="ROLE" not-null="true" />
		<property name="userId" column="USER_ID" not-null="true" />
		<property name="sessionId" column="SESSION_ID" not-null="true" />
		<property name="startDate" column="START_DATETIME" not-null="true" />
		<property name="endDate" column="END_DATETIME" not-null="false" />
		<property name="lastInteraction" column="LASTINTERACTION_DATETIME" not-null="true" />
	</class>

</hibernate-mapping>