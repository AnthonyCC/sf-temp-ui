<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.freshdirect.ocf.core" schema="cust">
	<class name="Flight" table="OCF_FLIGHT" lazy="false">
		<cache usage="nonstrict-read-write" />
		
		<id name="id" length="16">
			<generator class="native" />
		</id>
		
		<property name="name"/>
		<property name="scheduleName" column="schedule"/>
		<property name="multipleContact" column="multiple" type="boolean"/>

		<many-to-one name="listGenerator" class="DbListGenerator" column="LIST_ID" unique="true" cascade="all-delete-orphan" foreign-key=""/>
		
		<many-to-one name="campaign" class="Campaign" column="campaign_id" not-null="true"/>
		
		<list name="actions" cascade="all,delete-orphan" inverse="false" lazy="false">
			<key column="flight_id"/>
			<index column="ordinal"/>
			<one-to-many class="Action" />
		</list>
	</class>

</hibernate-mapping>