			NVL.apply(request.getParameter("blkStartDate"), CCFormatter.formatDateYear(Calendar.getInstance().getTime()));
            String blkEndDate = 
			NVL.apply(request.getParameter("blkEndDate"), CCFormatter.formatDateYear(Calendar.getInstance().getTime()));			
