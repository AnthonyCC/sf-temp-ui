    <td colspan="2">Tax<%= order.containsAlcohol() ? "("+view.getDescription()+")" : "" %>:</td>
    <td colspan="2" align="right"><%=JspMethods.formatPrice(view.getTax()) %><% if (__cld_hasInvoice) { %> / <b><%=JspMethods.formatPrice( invoicedView.getTax() ) %></b><% } %></td>
    <td colspan="4"></td>
    <% if (__cld_hasInvoice) { %>
        <td colspan="3"></td>
    <% } %>
</tr>
