    <td colspan="2" align="right"><%=JspMethods.formatPrice(view.getDepositValue()) %><% if (__cld_hasInvoice) { %> / <b><%=JspMethods.formatPrice( invoicedView.getDepositValue() ) %></b><% } %></td>
    <td colspan="4"></td>
    <% if (__cld_hasInvoice) { %>
        <td colspan="3"></td>
    <% } %>
</tr>
<tr>
