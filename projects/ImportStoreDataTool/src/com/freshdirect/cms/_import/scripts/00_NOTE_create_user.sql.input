--
-- Run with user system
--
-- USER SQL
CREATE USER ${cms.user} IDENTIFIED BY ${cms.password};

ALTER USER ${cms.user} 
DEFAULT TABLESPACE "USERS"
TEMPORARY TABLESPACE "TEMP"
ACCOUNT UNLOCK ;

-- ROLES
GRANT "RESOURCE" TO ${cms.user} ;
ALTER USER ${cms.user} DEFAULT ROLE "RESOURCE";

GRANT "SELECT_CATALOG_ROLE" TO ${cms.user} ;
ALTER USER ${cms.user} DEFAULT ROLE "SELECT_CATALOG_ROLE";

GRANT "CONNECT" TO ${cms.user} ;
ALTER USER ${cms.user} DEFAULT ROLE "CONNECT";

-- SYSTEM PRIVILEGES
GRANT CREATE ANY TABLE TO ${cms.user} ;
GRANT CREATE ANY SEQUENCE TO ${cms.user} ;
GRANT CREATE DATABASE LINK TO ${cms.user} ;
GRANT CREATE VIEW TO ${cms.user} ;
GRANT CREATE MATERIALIZED VIEW TO ${cms.user} ;
GRANT CREATE SYNONYM TO ${cms.user} ;

-- QUOTAS
ALTER USER ${cms.user} QUOTA UNLIMITED ON USERS;
